@using NorthwindProject.MvcWebUI.HtmlHelpers
@model NorthwindProject.MvcWebUI.Models.ProductListViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10">
    <table class="table">
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>
                    @Html.ActionLink(" ", "Delete", new { Id = product.Id },
                    new { onclick="return confirm('Are you sure to delete this product?')", @class = "glyphicon glyphicon-trash" })
                    @Html.ActionLink(" ","Update",new {Id =product.Id}, new {@class="glyphicon glyphicon-pencil"})
                </td>
                <td>@product.ProductName</td>
                <td>@product.QuantityPerUnit</td>
                <td>@String.Format("{0:C}",product.UnitPrice)</td>
            </tr>
        }
        <tfoot>
            <tr>
                <td colspan="4"><a href="/Product/Add" class="glyphicon glyphicon-plus"></a></td>
            </tr>
        </tfoot>
    </table>
</div>
<div>
    @Html.Pager(Model.PagingInfo)
</div>
